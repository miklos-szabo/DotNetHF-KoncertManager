<Window x:Class="WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClient"
        xmlns:dtOs="clr-namespace:KoncertManager.BLL.DTOs;assembly=KoncertManager.BLL"
        mc:Ignorable="d"
        Title="MainWindow" Height="735.766" Width="1208.941">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True">
            <TextBlock x:Name="tbOutput" Margin="224,45,446,0" TextWrapping="Wrap" Text="{Binding Source={x:Static local:Communication.ResponseString}}" VerticalAlignment="Top" Height="344"/>
        </ScrollViewer>
        <Button x:Name="buttonCreateNew" Content="Create New" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="75" Click="buttonCreateNew_Click"/>
        <ListBox x:Name="lbOutput" HorizontalAlignment="Left" Height="344" Margin="670,45,0,0" VerticalAlignment="Top" Width="341">
            <ListBox.Resources>
                <DataTemplate DataType="{x:Type dtOs:Band}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="30"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Name}" Grid.Column="0"></TextBlock>
                        <TextBlock Text="{Binding FormedIn}" Grid.Column="1"></TextBlock>
                        <TextBlock Text="{Binding Country}" Grid.Column="2"></TextBlock>
                    </Grid>
                </DataTemplate>
                <DataTemplate DataType="{x:Type dtOs:Venue}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition Width="20"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Name}" Grid.Column="0"></TextBlock>
                        <TextBlock Text="{Binding Address}" Grid.Column="1"></TextBlock>
                        <TextBlock Text="{Binding Capacity}" Grid.Column="2"></TextBlock>
                    </Grid>
                </DataTemplate>
                <DataTemplate DataType="{x:Type dtOs:Concert}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="20"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Date}" Grid.Column="0"></TextBlock>
                        <TextBlock Text="{Binding Venue.Name}" Grid.Column="1"></TextBlock>
                        <TextBlock Text="{Binding TicketsAvailable}" Grid.Column="2"></TextBlock>
                    </Grid>
                </DataTemplate>

            </ListBox.Resources>
        </ListBox>
        <Button x:Name="buttonBands" Content="Bands" HorizontalAlignment="Left" Margin="62,129,0,0" VerticalAlignment="Top" Width="75" Click="buttonBands_Click"/>
        <Button x:Name="buttonVenues" Content="Venues" HorizontalAlignment="Left" Margin="62,173,0,0" VerticalAlignment="Top" Width="75" Click="buttonVenues_Click"/>
        <Button x:Name="buttonConcerts" Content="Concerts" HorizontalAlignment="Left" Margin="62,223,0,0" VerticalAlignment="Top" Width="75" Click="buttonConcerts_Click"/>
        <ContentControl x:Name="inputControl" HorizontalAlignment="Left" Margin="224,389,0,0" VerticalAlignment="Top" Height="266" Width="391"/>
        <Button x:Name="buttonEdit" Content="Edit" HorizontalAlignment="Left" Margin="1059,108,0,0" VerticalAlignment="Top" Width="75" Click="buttonEdit_Click"/>
        <Button x:Name="buttonDelete" Content="Delete" HorizontalAlignment="Left" Margin="1059,173,0,0" VerticalAlignment="Top" Width="75" Click="buttonDelete_Click"/>

    </Grid>
</Window>
